#!/usr/bin/env node

function wantVersion(argv) {
  return argv.version;
}

function printVersion() {
  console.log(require('../package').version);
}

function wantHelp(argv) {
  return !! argv.help;
}

function needHelp(argv) {
  return argv._.length < 2;
}

function printHelp() {
  console.log('Usage: hipchat-hotline <recipient> <msg>');
  console.log('  Options');
  console.log('    When sending to either user or room:');
  console.log('      --message-format text | html');
  console.log('      --notify         false | true');
  console.log('    When sending to a room:');
  console.log('      --color          yellow | green | red | gray | purple');
}

var argv = require('minimist')(process.argv.slice(2));
if (wantVersion(argv)) {
  printVersion();
} else if (wantHelp(argv)) {
  printHelp();
  process.exit(0);
} else if (needHelp(argv)) {
  printHelp();
  process.exit(1);
}

function printSuccess(result) {
  console.log('Message Sent.');
  if (result && result.length && result.length !== 0) {
    console.log(result);
  }
}

function printError(e) {
  console.log('Error:');
  if (e) {
    console.log(e.message ? e.message : e);
  }
}

require('../index')
  .hotline(process.env, process.argv)
  .done(function(result) {
    printSuccess(result);
  }, function(e) {
    printError(e);
    process.exit(1);
  });
